// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SystemType {
  RED_STAR
  YOUNG_STAR
  UNSTABLE
  NEUTRON_STAR
  ORANGE_STAR
  BLUE_STAR
  WHITE_DWARF
  NEBULA
}

enum WaypointType {
  PLANET
  MOON
  ASTEROID
  GAS_GIANT
}

enum Trait {
  UNCHARTED
  MARKETPLACE
  SHIPYARD
  OUTPOST
  OCEAN
  BARREN
  FROZEN
  SPRAWLING_CITIES
}

model System {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  type            String
  waypoints       Waypoint[]
}

model Waypoint {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  type            Type      
  traits          Trait[]
  systemId        Int
  system          System      @relation(fields: [systemId], references [id])  
}

model User {
  id              Int         @id @default(autoincrement())
  username        String      @unique
  password        String
  credits         Int
  ships           Ship[]
  shipCount       Int
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model Shipyard {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  ships           Ship[]
  waypointId      Int
  waypoint        Waypoint    @relation(fields: [waypointId], references: [id])
}

model Ship {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  shipyardId      Int
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  shipyard        Shipyard     @relation(fields: [shipyardId], references [id])
}


